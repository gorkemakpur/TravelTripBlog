@using Travel_Trip_Blog_Website.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@item.BlogResmi" alt="" style="width:300px;height:150px" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToString("dd.MM.yy")</span>
                <p>

                    @if (item.Aciklama.Length < 50)
                    {@item.Aciklama}
                else
                { @item.Aciklama.Substring(0, 50)}...
                </p>
                <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Daha Fazlası >></span></a></p>
            </div>
        </div>
    }

    @Html.Action("Partial2", "Default")

    <div class="clear"></div>
</div>

