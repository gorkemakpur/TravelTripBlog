@using Travel_Trip_Blog_Website.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>

    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot" style="margin-left:275px">Seyahat Bloğum</h2>
                    <div class="banner-left">


                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restoranlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>

                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>

                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Şeyler</p>
                            </div>
                            <div class="clear"></div>
                        </div>

                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araba Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>



                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider">
                            <ul class="rslides" id="slider1">

                                @foreach (var item in Model)
                                {
                                    <li><img src="@item.BlogResmi" alt="" style="width: 650px; height: 350px;object-fit:contain"></li>
                                }



                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">

                <div class="con-top">
                    <h3>Tatil Bloğum Sitesine Hoşgeldiniz</h3>
                    <p>
                        Bu proje asp.net mvc5 ve code first yaklaşımı kullanılarak yapılmış
                        dinamik bir web projesidir. Şubat 2023 Yılında tamamlanmıştır. Projenin amacı insanların gezip gördüğü
                        yerleri bu site üzerinde paylaşarak deneyimlerini diğer insanlarla paylaşarak bilgi alışverişi yapılması amaçlanmıştır.
                    </p>
                </div>

                @Html.Action("Partial", "Default")
                


                <div class="grids">
                    <div class="box1">

                        @Html.Action("Partial3", "Default")


                        <div class="padding1">
                            <h4>Benim favorilerim</h4>

                            @Html.Action("Partial4", "Default")
                            
                            @Html.Action("Partial5", "Default")
                            <div class="clear"></div>
                        </div>
                            <div class="clear"></div>
                        </div>
                    </div>
            </div>
        </div>
    </div>

</body>
</html>

