@using Travel_Trip_Blog_Website.Models.Siniflar
@model List<Blog>


<div class="padding">
    <h4>Son Bloglar</h4>
    <ul class="list list-pad">
        @{ int counter = 0;}
        @foreach (var item in Model)
        {

            <li class="list-bg"><span>@{counter = counter + 1;} @counter</span><a href="/Blog/BlogDetay/@item.ID">@item.Baslik</a></li>
          
        }



    </ul>
    <a href="/Blog/Index" class="link1">Bütün Blogları Gör</a>
</div>